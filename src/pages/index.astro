---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import EducationIcon from "@/components/icons/Education.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Education from "@/components/Education.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import LanguagesIcon from "@/components/icons/Languages.astro"
import Languages from "@/components/Languages.astro"
---

<Layout
  title="Nacho Mata - Telecommunications engineer specializing in telematics"
  description="Explore the professional profile of Nacho Mata, a telecommunications engineer specializing in telematics."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experience">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        Work experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="education">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <EducationIcon class="size-7" />
        Education
      </h2>
      <Education />
    </SectionContainer>

    <SectionContainer id="languages">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <LanguagesIcon class="size-7" />
        Languages
      </h2>
      <Languages />
    </SectionContainer>

    <SectionContainer id="about-me">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
